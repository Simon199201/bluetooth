<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jikexuyuan.bluetooth">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name="com.isoftstone.bluetooth.BluetoothApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/main_activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PairActivity"
            android:label="@string/pair_activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".IndexActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StatusSettingActivity"
            android:label="@string/pair_bluetooth_setting"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TransferActivity"
            android:label="@string/file_transfer"
            android:screenOrientation="portrait" />


    </application>

</manifest>