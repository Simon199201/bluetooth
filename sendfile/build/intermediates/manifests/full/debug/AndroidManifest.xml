<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.isoftstone.bluetooth"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_BLUETOOTH_SHARE" />

    <application
        android:name="com.isoftstone.bluetooth.BluetoothApplication"
        android:icon="@drawable/bluetooth"
        android:label="@string/app_name" >
        <activity
            android:name="com.isoftstone.bluetooth.activity.BluetoothDemoActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.isoftstone.bluetooth.activity.SelectFileActivity"
            android:theme="@android:style/Theme.Dialog" />
    </application>

</manifest>